@{
    ViewBag.Title = "Chat";
}
<h2>Chat</h2>
<div class="container">
    <div>
        <label>UserName: </label>
        <input type="text" readonly id="displayname" value="AminRostami" />
    </div>
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />

    <input type="button" id="test" value="test" />
    <input type="button" id="sendToUser" value="sendToUser" />



    <ul id="discussion"></ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function ()
        {
            // Reference the auto-generated proxy for the hub.


            //var connection = new HubConnection("http://localhost:63222/");
            //connection.Headers.Add("username", "AminRostami");
            //var myHub = connection.CreateHubProxy("chatHub");


            var chat = $.connection.chatHub;

            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message)
            {
                // Add message to the page.
                $('#discussion').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };


            chat.client.Test = function (message)
            {
                // Add message to the page.
                $('#discussion').append('<li><strong>Test => </strong>: ' + htmlEncode(message) + '</li>');
            };

            chat.client.sendToUserPrivate = function (name, message, connectionId)
            {
                // Add message to the page.
                $('#discussion').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</li>  connectionId => ' + connectionId);
            };


            // Get the user name and store it to prepend to messages.
            //$('#displayname').val(prompt('Enter your name:', ''));

            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function ()
            {
                $('#sendmessage').click(function ()
                {
                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });


                $('#test').click(function ()
                {
                    chat.server.test($('#displayname').val() + " => " + $('#message').val());
                    $('#message').val('').focus();
                });

                $('#sendToUser').click(function ()
                {
                    chat.server.sendToUserPrivate($('#displayname').val(), $('#message').val(), "123");
                    $('#message').val('').focus();
                });

            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value)
        {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}